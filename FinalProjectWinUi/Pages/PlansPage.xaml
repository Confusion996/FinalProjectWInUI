<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FinalProjectWinUi.Pages.PlansPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FinalProjectWinUi.Pages"
    xmlns:controls="using:FinalProjectWinUi.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Plans"
            FontSize="50"
            Foreground="#DCD7C9"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Padding="32"
            Grid.Row="0"/>
        <ScrollViewer
            x:Name="svPanel" Height="550"
            Grid.Row="1"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <TextBlock Text="Traditional Plans"
                           Padding="25,0"
                           FontSize="25"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"/>
                <ScrollViewer
                    Padding="25"
                    x:Name="scroller"
                    Width="auto"
                    HorizontalScrollBarVisibility="Hidden"
                    HorizontalScrollMode="Enabled"
                    VerticalScrollMode="Disabled"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">

                    <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                    </StackPanel>
                </ScrollViewer>

                <TextBlock Text="Cremation Plans"
                    Padding="25,0"
                    FontSize="25"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"/>
                <ScrollViewer
                    Padding="25"
                    x:Name="scroller2"
                    Width="auto"
                    HorizontalScrollBarVisibility="Hidden"
                    HorizontalScrollMode="Enabled"
                    VerticalScrollMode="Disabled"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">

                    <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                    </StackPanel>
                </ScrollViewer>

                <TextBlock Text="Special Plans"
                    Padding="25,0"
                    FontSize="25"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"/>
                <ScrollViewer
                    Padding="25"
                    x:Name="scroller3"
                    Width="auto"
                    HorizontalScrollBarVisibility="Hidden"
                    HorizontalScrollMode="Enabled"
                    VerticalScrollMode="Disabled"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">

                    <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                        <controls:ReusableGrid/>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>


