<Page
    x:Class="FinalProjectWinUi.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Background Image -->
        <Image Source="/Assets/coffinmeme.jpg"
               Stretch="Fill"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>

        <!-- Header Text -->
        <TextBlock Text="Funeral homes"
                   FontSize="50"
                   Foreground="Black"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Padding="32"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="675">
            <Button Content="Plans" Click="Plans_Click" Foreground="Black" FontSize="50"/>
            <Button Content="Buy Now" Click="BuyNow_Click" Foreground="Black" FontSize="50"/>
        </StackPanel>
    </Grid>
</Page>
